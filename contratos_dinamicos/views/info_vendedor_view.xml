<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_info_vendedor_form" model="ir.ui.view">
            <field name="name">info.vendedor.form</field>
            <field name="model">info.vendedor</field>
            <field name="arch" type="xml">
                <form string="InformaciÃ³n del Vendedor">
                    <sheet>
                        <div class="oe_button_box" name="button_box" />
                        <div class="oe_title">
                            <field name="image_1920" widget="image" class="oe_avatar"
                                options="{'preview_image': 'image_1920'}" style="float:right;" />

                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_inline" readonly="state == 'sale'"/>
                            </h1>
                        </div>
                        <group>
                            <field name="email" readonly="state == 'sale'"/>
                            <field name="phone" readonly="state == 'sale'"/>
                            <field name="numero_de_identificacion" readonly="state == 'sale'"/>
                            <field name="nacionalidad_id" readonly="state == 'sale'"/>

                            <field name="state" invisible="1"/>

                        </group>
                    </sheet>

                </form>
            </field>
        </record>

    </data>
</odoo>