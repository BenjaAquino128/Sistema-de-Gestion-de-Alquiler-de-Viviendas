        <record id="view_rental_order_form_hide_badges" model="ir.ui.view">
            <field name="name">rental.order.form.hide.badges</field>
            <field name="model">sale.order</field>
            <field name="priority">30</field> 
            <field name="inherit_id" ref="sale_renting.rental_order_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//div[contains(@class,'badge')]" position="replace"/>

            </field>
        </record>

        <record id="ocultar_campo_mobile_res_user" model="ir.ui.view">
            <field name="name">ocultar_campo_mobile_res_user</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_simple_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='mobile']" position="replace"/>
                <xpath expr="//field[@name='phone']" position="after">
                    <field name="numero_de_identificacion"/>
                    <field name="nacionalidad_related" string="Nacionalidad" readonly="0"/>
                </xpath>
            </field>
        </record>

        <record id="ocultar_campo_vat_res_user" model="ir.ui.view">
            <field name="name">ocultar_campo_vat_res_user</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="replace"/>
            </field>
        </record>
    </data>
    
