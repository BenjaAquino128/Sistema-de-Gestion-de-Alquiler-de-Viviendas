<odoo>
  <template id="report_recibo_de_pago">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="web.basic_layout">
          <div style="margin-top: 3cm;">
              <h2 style="text-align:center; margin-bottom:20px;">
                <strong>RECIBO DE PAGO</strong>
              </h2>

              <div style="margin-bottom: 20px;">
                <p><strong>Número de Recibo:</strong> <span t-field="o.name"/></p>
                <p><strong>Fecha de Pago:</strong> <span t-field="o.date"/></p>
                <p>
                  <strong>Cliente:</strong>
                  <span t-field="o.partner_id.name"/>
                </p>
              </div>

              <table class="table table-sm o_main_table" style="width:100%; border:1px solid #000; border-collapse: collapse;">
                <tr>
                  <td style="border:1px solid #000; padding:8px; width:50%;">
                    <strong>Método de Pago</strong>
                  </td>
                  <td style="border:1px solid #000; padding:8px; width:50%;">
                    <span t-field="o.payment_method_id.name"/>
                  </td>
                </tr>
                <tr>
                  <td style="border:1px solid #000; padding:8px;">
                    <strong>Importe</strong>
                  </td>
                  <td style="border:1px solid #000; padding:8px;">
                    <span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                  </td>
                </tr>
                <tr t-if="o.ref">
                  <td style="border:1px solid #000; padding:8px;">
                    <strong>Referencia / Memo</strong>
                  </td>
                  <td style="border:1px solid #000; padding:8px;">
                    <span t-field="o.ref"/>
                  </td>
                </tr>
              </table>

              <div style="margin-top:2cm; text-align:right;">
                <p>___________________________</p>
                <p><strong>Firma y Sello</strong></p>
              </div>
          </div>
        </t>
      </t>
    </t>
  </template>

  <record id="action_report_recibo_de_pago" model="ir.actions.report">
    <field name="name">Imprimir Recibo</field>
    <field name="model">account.payment</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">contratos_dinamicos.report_recibo_de_pago</field>
    <field name="paperformat_id" ref="contratos_dinamicos.paperformat_horizontal"/>
</record>

<record id="paperformat_horizontal" model="report.paperformat">
    <field name="name">Horizontal A4</field>
    <field name="format">A4</field>
    <field name="orientation">Landscape</field>
    <field name="margin_top">10</field>
    <field name="margin_bottom">10</field>
    <field name="margin_left">10</field>
    <field name="margin_right">10</field>
</record>

</odoo>
