<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="paperformat_a4_normal" model="report.paperformat">
      <field name="name">A4 Normal</field>
      <field name="default" eval="False"/>
      <field name="format">A4</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">20</field>
      <field name="margin_bottom">1</field>
      <field name="margin_left">25</field>
      <field name="margin_right">25</field>
      <field name="header_line" eval="False"/>
      <field name="dpi">90</field>
    </record>  

    <record id="button_contrato_dinamico_report" model="ir.actions.report">
      <field name="name">Imprimir Contrato</field>
      <field name="model">sale.order</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">contratos_dinamicos.report_contrato_dinamico</field>
      <field name="report_file">contratos_dinamicos.report_contrato_dinamico</field>
      <field name="binding_model_id" ref="sale.model_sale_order"/>
      <field name="binding_type">report</field>
      <field name="paperformat_id" ref="contratos_dinamicos.paperformat_a4_normal"/>
    </record>
</odoo>
